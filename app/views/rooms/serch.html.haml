.warapper
  .side.search__boxs
    %h3 MORE FILTER
    .search__box
      .search__box-base
        %h4 基本情報
        .search__box-base--date
          %p 日付
          %input{placeholder: "チェックイン", class: "search__box-base--date-in"}
          %input{placeholder: "チェックアウト", class: "search__box-base--date-out"}
        .search__box-number
          %p 人数
          %input{type: "number", placeholder: "宿泊人数"}
    .search__box
      .search__box-price
        %h4 価格帯
        %input{type: "price", placeholder: "下限価格"}
        %input{type: "price", placeholder: "上限価格"}
    .search__box
      .search__box-rooms
      %h4 部屋タイプ

      .serch__box-room
        .search__box-room-select
          %input.checkbox{type: "checkbox"}
        .search__box-room-content
          %h5 まるまる貸切/Reserved

      .serch__box-room
        .search__box-room-select
          %input.checkbox{type: "checkbox"}
        .search__box-room-content
          %h5 個室/Private Room

      .serch__box-room
        .search__box-room-select
          %input.checkbox{type: "checkbox"}
        .search__box-room-content
          %h5 シェアルーム/Shared Room

    .search__box
      %input{type: "button", value: "Search"}



  .main
    .rooms.container
      .sub
        %h3 100件以上のお家
      .rooms
        - @rooms.each do |room|
          = render partial: 'listing-thumb', locals: {room: room}
