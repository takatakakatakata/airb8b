.row
  .col-md-4.col-md-offset-4
    %h2.text-center Sign up

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group
        = f.label :first_name
        = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "FirstName", class: "form-control"
      .form-group
        = f.label :last_name
        = f.text_field :last_name, autocomplete: "last_name", placeholder: "LastName", class: "form-control"
      .form-group
        = f.label :gender
        = f.select :gender, [["male",0],["female",2],["other",3]]
      .form-group
        = f.label :birthday
        = f.text_field :birthday_year, placeholder: "Year", class: "form-control"
        = f.text_field :birthday_month, placeholder: "Month", class: "form-control"
        = f.text_field :birthday_day, placeholder: "Day", class: "form-control"
      .form-group
        = f.label :email
        = f.email_field :email, autocomplete: "email", placeholder: "Type your Email", class: "form-control"
      .form-group
        = f.label :password
        = f.password_field :password, autocomplete: "new-password", class: "form-control"
      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
      .actions
        = f.submit "Sign up", class: "btn btn-primary"
