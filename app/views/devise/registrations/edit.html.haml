.row
  .col-md-4.col-md-offset-4
    %h2.text-center Profile
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .form-group
        = f.label :first_name
        = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "FirstName", class: "form-control"
      .form-group
        = f.label :last_name
        = f.text_field :last_name, autocomplete: "last_name", placeholder: "LastName", class: "form-control"
      .form-group
        = f.label :gender
        = f.select :gender, [["male",0],["female",1],["other",2]]
      .form-group
        = f.label :birthday
        = f.text_field :birthday_year, placeholder: "Year", class: "form-control"
        = f.text_field :birthday_month, placeholder: "Month", class: "form-control"
        = f.text_field :birthday_day, placeholder: "Day", class: "form-control"
      .form-group
        = f.label :email
        = f.email_field :email, autocomplete: "email", placeholder: "Type your Email", class: "form-control"
      .form-group
        = f.label :language
        = f.select :language, [["日本語",0],["English",1],["中国語",2],["ポルトガル語",3],["その他",4]], autocomplete: "language"
      .form-group
        = f.label :currency
        = f.select :currency, [["日本円",0],["米ドル",1],["英ドル",2],["中国元",3],["その他",4]], autocomplete: "currency"
      .form-group
        = f.label :address
        = f.text_field :address, autocomplete: "address", placeholder: "例)フランスパリ、ニューヨーク州ブルックリン、東京都渋谷区", class: "form-control"
      .form-group
        = f.label :introduction
        = f.text_area :introduction, cols: 40, row: 5, autocomplete: "introduction", placeholder: "Introduction", class: "form-control"

      .actions
        = f.submit "Update", class: "btn btn-primary"